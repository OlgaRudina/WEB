<div class="row">
    <div class="col-md-12">
        <h2>Departments<a href="/departments/add" class="btn btn-success pull-right">Add New Department</a></h2>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                        <td><a href="departments/delete/{{departmentId}}" class="btn btn-danger" value="remove">remove</a><br /><br /><br /></td>
                    </tr>

                    {{else}}
                    <tr>
                        <td>No Data Available</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>